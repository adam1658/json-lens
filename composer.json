{
    "name": "adam1658/json-lens",
    "description": "Typed 'lens' classes for accessing JSON data",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Adam Rich",
            "email": "adam.james.rich@me.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Adam1658\\JsonLens\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adam1658\\JsonLensTest\\": "test/"
        }
